<project>

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="src" destdir="build/classes"/>
    </target>

    <target name="jar">
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/Primer-Designer.jar" basedir="build/classes">
            <manifest>
                	<attribute name="Main-Class" value="MainFrame"/>
	<attribute name="Class-Path" value="build/classes"/>
            </manifest>
        </jar>
    </target>

    <target name="run">
        <java jar="build/jar/Primer-Designer.jar" fork="true"/>
    </target>

</project>